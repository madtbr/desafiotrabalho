{% extends 'base.html.twig' %}

{% block title %}Funcionarios index{% endblock %}

{% block body %}
    <h1>Funcionarios index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Tipo</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for funcionario in funcionarios %}
            <tr>
                <td>{{ funcionario.id }}</td>
                <td>{{ funcionario.nome }}</td>
                <td>{{ funcionario.tipo }}</td>
                <td>{{ funcionario.status }}</td>
                <td>
                    <a href="{{ path('funcionarios_show', {'id': funcionario.id}) }}">show</a>
                    <a href="{{ path('funcionarios_edit', {'id': funcionario.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('funcionarios_new') }}">Create new</a>
{% endblock %}
