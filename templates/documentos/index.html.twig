{% extends 'base.html.twig' %}

{% block title %}Documentos index{% endblock %}

{% block body %}
    <h1>Documentos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for documento in documentos %}
            <tr>
                <td>{{ documento.id }}</td>
                <td>
                    <a href="{{ path('documentos_show', {'id': documento.id}) }}">show</a>
                    <a href="{{ path('documentos_edit', {'id': documento.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('documentos_new') }}">Create new</a>
{% endblock %}
